<h1 class="page-text">Rent a boat</h1>
<p class="page-text">Rent one of our beautiful boats for a lovely day on the water in Amsterdam</p>

<div class="container">
  <div class="cards m-5">
    <% @boats.each do |boat| %>
      <%= render 'shared/boat', boat: boat %>
    <% end %>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

