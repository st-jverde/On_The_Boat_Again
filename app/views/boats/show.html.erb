<div class="container">
  <div class="text-button">
    <div class="show-text">
      <h1><%= @boat.name %></h1>
      <p>Number of people: <%= @boat.number_of_people %></p></p>
      <br>
      <p><%= @boat.description %></p>
      <h4>â‚¬ <%= number_with_precision(@boat.price, precision: 2) %></h4>
      <br>
    </div>

    <div class="btn-booking">
      Book this boat
    </div>
  </div>

  <div class="show-img">
    <% photos = @boat.photos %>
    <% photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>
</div>
